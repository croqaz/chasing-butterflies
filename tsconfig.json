{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es6"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "lib": [
    "es2015",
    "es2016"
  ]
}